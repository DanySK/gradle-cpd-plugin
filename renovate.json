{
   "$schema": "https://docs.renovatebot.com/renovate-schema.json",
   "extends": [
      "github>DanySK/renovate-config:gradle-plugin"
   ],
   "includeForks": true,
   "packageRules": [
      {
         "description": "Trigger a patch update on PMD upgrades",
         "matchPackageNames": [
           "/^net\\.sourceforge\\.pmd.*/"
         ],
         "semanticCommitScope": "core-deps"
      }
   ]
}
